{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc --skipLibCheck",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "clean:all": "rm -rf dist node_modules package-lock.json",
    "rebuild": "npm run clean && npm run build",
    "fresh": "npm run clean:all && npm install && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-mongo-sanitize": "^2.2.0",
    "cookie-parser": "^1.4.6",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "module-alias": "^2.2.3"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "ts-node-dev": "^2.0.0",
    "@types/node": "^20.8.10",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/helmet": "^4.0.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.14"
  },
  "_moduleAliases": {
    "@": "src",
    "@config": "src/config",
    "@controllers": "src/controllers",
    "@middleware": "src/middleware",
    "@models": "src/models",
    "@routes": "src/routes",
    "@services": "src/services",
    "@utils": "src/utils",
    "@validations": "src/validations"
  }
}
